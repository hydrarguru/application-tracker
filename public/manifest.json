{
    "manifest_version": 3,
    "name": "Job Application Tracker",
    "version": "0.0.1",
    "description": "",
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "dashboard.html",
        "open_in_tab": true
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage", "activeTab", "offscreen"],
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
